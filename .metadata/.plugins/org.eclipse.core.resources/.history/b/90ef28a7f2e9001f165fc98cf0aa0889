package pirates;

public class Affichage {
	
	public String afficherAcceuil() {
		return "Bienvenue sur le jeu\n";
	}
	
	public String demanderNomJoueur() {
		return "Quel est le nom de votre personnage ?\n";
	}

	public static void main(String[] args) {
		Affichage affichage = new Affichage();
		System.out.println(affichage.afficherAcceuil());
		System.out.println(affichage.demanderNomJoueur());

	}

}
