package pirates;

public class Personnage {

	private String nom;
	private int nbPV;
	private int nbPopularite;
	private Carte[] laMain = new Carte[4];

	public int getPopularite() {
		return nbPopularite;
	}

	public int getPV() {
		return nbPV;
	}

	public String getNom() {
		return nom;
	}

	public Carte getCarteJoueur(int numeroCarte) {
		return laMain[numeroCarte];
	}

	// String retour = str1.concat(str2);

	public String donnerMain() {
		for (int i = 1; i < 5; i++) {
			System.out.println("Carte " + i + "\n" + laMain[i - 1].carteToString() + "\n");
		}
		return null;

	}
}
