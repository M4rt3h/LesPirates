package pirates;
import java.util.Scanner;

public class Affichage {
	
	public String afficherAcceuil() {
		return "Bienvenue sur le jeu\n";
	}
	
	public String demanderNomJoueur(int numJoueur) {
		return "Quel est le nom du joueur " + String.valueOf(numJoueur) + " ?\n";
	}
	

	
	public static void main(String[] args) {
		String[] joueurs = new String[2]; //Pour stocker les nom de joueurs
        Scanner scanner = new Scanner(System.in);
    	

		Affichage affichage = new Affichage();
		System.out.println(affichage.afficherAcceuil());
		
		System.out.println(affichage.demanderNomJoueur(1));
        joueurs[0] = scanner.nextLine(); // Lecture de l'entrée utilisateur + stockage
        System.out.println("Le joueur 1 s'appelle : " + joueurs[0] + "\n");
        
		System.out.println(affichage.demanderNomJoueur(2));
        joueurs[1] = scanner.nextLine(); // Lecture de l'entrée utilisateur + stockage
        System.out.println("Le joueur 2 s'appelle : " + joueurs[1] + "\n");
       
        
		String[] laMain1 = new String[5]; //Pour stocker les cartes du joueur 1
		String[] laMain2 = new String[5]; //Pour stocker les cartes du joueur 2
		
		for (int k=0; k<5; k++) { //ajout des cartes aux mains de chaque joueurs
			laMain1[k] = "";
			laMain2[k] = "";
		}
		
		
        boolean joueurPerdu = false;
        int PV_J1 = 5; //PointsVie du joueur 1
        int PP_J1 = 0; //PointsPopularite joueur 1
        int PV_J2 = 5; //PointsVie du joueur 2
        int PP_J2 = 0; //PointsPopularite joueur 2
        int indiceJoueur = 0; // %2 pour connaitre qui joue
        
        while (!joueurPerdu) { //La partie continue tant qu'aucun joueur ne perd
        	joueurPerdu = (PV_J1 == 0) || (PV_J2 == 0) || (PP_J1 == 5) || (PP_J2 == 5);
        	System.out.println("C'est au tour de "+joueurs[indiceJoueur]+" de jouer !");
        	
        	System.out.println("Voici ta main :");
        	System.out.println("Qu'est ce que tu choisis de faire ? \n(Renseigne le numero de la carte à utiliser)");
        	
        	while(!scanner.hasNextInt() || scanner.nextInt()<1 || scanner.nextInt()>5) {
        		System.out.println("Ce n'est pas une entrée valide, saisie un entier entre 1 et 5");
        		
        	}
        	
        	int choix = scanner.nextInt();
        	
        }
        
		
        scanner.close(); //fermer le scanner
	}

}
